<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/carmineColor</item>
        <item name="colorPrimaryDark">@color/carmineColor</item>
        <item name="colorAccent">@color/carmineColor</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
    </style>

    <!--<style name="AppTheme.BackUpButton" parent="Theme.AppCompat.Light.DarkActionBar">
