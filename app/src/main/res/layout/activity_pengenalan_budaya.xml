<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33A9AC"
    tools:context=".activity_pengenalanBudaya">

    <TextView
        android:id="@+id/tvPengenalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Jelajahi Jenis Budaya"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivTari"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPengenalan"
        app:srcCompat="@drawable/budaya_tari" />

    <ImageView
        android:id="@+id/ivSenjata"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPengenalan"
        app:srcCompat="@drawable/budaya_tari" />

    <ImageView
        android:id="@+id/ivBaju"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTari"
        app:srcCompat="@drawable/budaya_tari" />

    <TextView
        android:id="@+id/tvTari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Tarian Daerah"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivTari"
        app:layout_constraintStart_toStartOf="@+id/ivTari"
        app:layout_constraintTop_toBottomOf="@+id/ivTari" />

    <TextView
        android:id="@+id/tvSenjata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Senjata Tradisional"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivSenjata"
        app:layout_constraintStart_toStartOf="@+id/ivSenjata"
        app:layout_constraintTop_toBottomOf="@+id/ivSenjata" />

    <ImageView
        android:id="@+id/ivRumahAdat"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSenjata"
        app:srcCompat="@drawable/budaya_tari" />

    <TextView
        android:id="@+id/tvBaju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Baju Adat"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivBaju"
        app:layout_constraintStart_toStartOf="@+id/ivBaju"
        app:layout_constraintTop_toBottomOf="@+id/ivBaju" />

    <TextView
        android:id="@+id/tvRumahAdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivRumahAdat"
        app:layout_constraintStart_toStartOf="@+id/ivRumahAdat"
        app:layout_constraintTop_toBottomOf="@+id/ivRumahAdat" />
</androidx.constraintlayout.widget.ConstraintLayout>