<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_deskripsiBudaya"
    android:gravity="center_vertical"
    android:background="@color/BackgroundActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/includeBackToolbar"
            layout="@layout/back_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHeaderDeskripsiBudaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="Nama Budaya"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeBackToolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDeskripsiBudaya1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeaderDeskripsiBudaya">
            <ImageView
                android:id="@+id/ivDeksripsiBudaya1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvAsalBudaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Asal:"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/cvDeskripsiBudaya1"
            app:layout_constraintTop_toBottomOf="@id/cvDeskripsiBudaya1" />

        <TextView
            android:id="@+id/tvAsalBudaya1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/cvDeskripsiBudaya1"
            app:layout_constraintStart_toEndOf="@+id/tvAsalBudaya"
            app:layout_constraintTop_toBottomOf="@+id/cvDeskripsiBudaya1" />

        <TextView
            android:id="@+id/tvIsiBudaya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Sejarah:"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tvAsalBudaya1"
            app:layout_constraintStart_toStartOf="@+id/tvAsalBudaya"
            app:layout_constraintTop_toBottomOf="@+id/tvAsalBudaya1" />

        <TextView
            android:id="@+id/tvIsiBudaya1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvIsiBudaya"
            app:layout_constraintStart_toStartOf="@+id/tvIsiBudaya"
            app:layout_constraintTop_toBottomOf="@+id/tvIsiBudaya" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>